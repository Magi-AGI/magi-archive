# MCP API Configuration

# Required: API key for authentication
MCP_API_KEY=your-secure-api-key-here

# Service account names (optional, uses defaults if not set)
MCP_USER_NAME=mcp-user
MCP_GM_NAME=mcp-gm
MCP_ADMIN_NAME=mcp-admin

# Service account credentials (required for rake mcp:setup_roles)
MCP_USER_EMAIL=mcp-user@example.com
MCP_USER_PASSWORD=secure-password-1
MCP_GM_EMAIL=mcp-gm@example.com
MCP_GM_PASSWORD=secure-password-2
MCP_ADMIN_EMAIL=mcp-admin@example.com
MCP_ADMIN_PASSWORD=secure-password-3

# Token configuration
MCP_TOKEN_TTL=3600  # 1 hour

# Rate limiting
MCP_RATE_LIMITING=true
MCP_RATE_LIMIT_PER_HOUR=1000

# Caching
MCP_TYPES_CACHE_TTL=3600
